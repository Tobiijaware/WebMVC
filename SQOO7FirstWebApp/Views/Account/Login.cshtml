@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "_Layout.cshtml";

    var returnUrl = !string.IsNullOrWhiteSpace(ViewBag.ReturnUrl) ? ViewBag.ReturnUrl : "/";

}

<div class="d-flex justify-content-center align-items-center" style="height:70vh">
    <div class="border col-4 rounded p-4" style="min-height:300px">
        <h1 class="mb-3">Login here!</h1>
        <div asp-validation-summary="ModelOnly"></div>
        <form method="post" asp-action="Login" asp-controller="Account" asp-route-returnUrl="@returnUrl">
            <div class="form-group m-1">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="Email" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="Email"></span></small>
            </div>
            <div class="form-group m-1">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Password" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="Password"></span></small>
            </div>
            <div class="form-group m-1 d-flex justify-content-between align-items-center">
                <div class="d-flex">
                    <input asp-for="RememberMe" class="form-control mr-2" style="width:15px; height:15px; margin-top:3px" />
                    <small><label asp-for="RememberMe"></label></small>
                </div>
                <div>
                    <a asp-action="ForgotPassword" asp-controller="Account">
                        <small>Forgot Password?</small>
                    </a>
                </div>
            </div>

            <div class="form-group m-1">
                <button type="submit" class="btn btn-primary" >Log In</button>
            </div>

            <hr />
            <partial name="_AuthNavPartial" />
        </form>
    </div>
</div>