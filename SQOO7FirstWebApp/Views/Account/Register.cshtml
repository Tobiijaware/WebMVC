@model RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = "_Layout.cshtml";
}

<div class="d-flex justify-content-center align-items-center mt-3" style="height:100vh">
    <div class="border col-4 rounded p-4" style="min-height:300px; overflow-y:scroll; max-height:80vh;">
        <h1 class="mb-3">Register here!</h1>
        <div asp-validation-summary="ModelOnly"></div>
        <form method="post" asp-action="Register" asp-controller="Account">
            <div class="form-group m-1">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" placeholder="First Name" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="FirstName"></span></small>
            </div>
            <div class="form-group m-1">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" placeholder="Last Name" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="LastName"></span></small>
            </div>
            <div class="form-group m-1">
                <label asp-for="Gender"></label>
                <select asp-for="Gender" class="form-control">
                    <option value="">Select a gender type</option>
                    @foreach (var gender in Model.ListOfGender)
                    {
                        <option value="@gender.Key">@gender.Value</option>
                    }
                </select>
                <small class="mb-1 text-danger"><span asp-validation-for="Gender"></span></small>
            </div>
            <div class="form-group m-1">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="Email" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="Email"></span></small>
            </div>
            <div class="form-group m-1">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Password" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="Password"></span></small>
            </div>

            <div class="form-group m-1">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" placeholder="Confirm Password" class="form-control" />
                <small class="mb-1 text-danger"><span asp-validation-for="ConfirmPassword"></span></small>
            </div>

            <div class="form-group m-1">
                <button type="submit" class="btn btn-primary">Register</button>
            </div>

            <hr />

            <partial name="_AuthNavPartial" />
        </form>
    </div>
</div>